<Window x:Class="McDContactManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:McDContactManager"
        xmlns:vm="clr-namespace:McDContactManager.ViewModel"
        xmlns:behaviors="clr-namespace:McDContactManager.Model"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    
    <!--
    <Grid>
        <Button Content="Fájl feltöltése" Width="150" Height="40" Click="OpenUploadWindow_Click" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
    -->
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Gombok -->
            <RowDefinition Height="Auto"/> <!-- Szűrők -->
            <RowDefinition Height="*"/>    <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Gombok -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="Upload" Command="{Binding OpenUploadCommand}" Margin="0,0,10,0" Width="80"/>
            <Button Content="Load" Command="{Binding LoadContactsCommand}" Margin="0,0,10,0" Width="80"/>
            <Button x:Name="UpdateButton" Content="Update" Margin="0,0,10,0" Width="80"/>
            <Button Command="{Binding MarkPublishedCommand}" Content="Marked as Published" Margin="0,0,10,0" Width="130"/>
            <Button Command="{Binding MarkHiredCommand}" Content="Marked as Hired" Margin="0,0,10,0" Width="120"/>
            <Button Command="{Binding MarkNotPublishedCommand}" Content="Marked as NOT Published" Margin="0,0,10,0" Width="130"/>
            <Button Command="{Binding MarkNotHiredCommand}" Content="Marked as NOT Hired" Width="120"/>
        </StackPanel>

        <!-- Szűrők -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Label Content="Name:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged}" Width="120" Margin="5,0,15,0"/>

            <Label Content="Phone:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding PhoneFilter, UpdateSourceTrigger=PropertyChanged}" Width="120" Margin="5,0,15,0"/>
            
            <Label Content="Email:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding EmailFilter, UpdateSourceTrigger=PropertyChanged}" Width="120" Margin="5,0,15,0"/>
            
            <Label Content="Date from:" VerticalAlignment="Center"/>
            <DatePicker SelectedDate="{Binding DateFrom}" Width="140" Margin="5,0,15,0"/>
            
            <Label Content="Date to:" VerticalAlignment="Center"/>
            <DatePicker SelectedDate="{Binding DateTo}" Width="140" Margin="5,0,15,0"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding FilteredContacts}" 
                  behaviors:SelectedItemsBehavior.BindableSelectedItems="{Binding SelectedContacts}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserResizeColumns="False"
                  CanUserResizeRows="False"
                  CanUserReorderColumns="False"
                  SelectionMode="Extended" 
                  HeadersVisibility="Column" 
                  SelectionUnit="FullRow" 
                  CanUserDeleteRows="False">
            <DataGrid.Columns>
                <!--
                <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="60"/>
                -->
                <DataGridTextColumn Header="Name" Binding="{Binding Name, Mode=OneWay}" Width="*" CanUserResize="False"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone, Mode=OneWay}" Width="*" CanUserResize="False"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email, Mode=OneWay}" Width="*" CanUserResize="False"/>
                <DataGridTextColumn Header="Date" Binding="{Binding DateCreated, Mode=OneWay, StringFormat='yyyy. MM. dd'}" Width="*" CanUserResize="False"/>
                <DataGridTextColumn Header="Published" Binding="{Binding Published, Mode=OneWay}" IsReadOnly="True" Width="80" CanUserResize="False"/>
                <DataGridTextColumn Header="Hired" Binding="{Binding Hired, Mode=OneWay}" IsReadOnly="True" Width="80" CanUserResize="False"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
    
</Window>
