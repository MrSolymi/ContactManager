<Window x:Class="McDContactManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:McDContactManager"
        xmlns:vm="clr-namespace:McDContactManager.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    
    <!--
    <Grid>
        <Button Content="Fájl feltöltése" Width="150" Height="40" Click="OpenUploadWindow_Click" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
    -->
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Gombok -->
            <RowDefinition Height="Auto"/> <!-- Szűrők -->
            <RowDefinition Height="*"/>    <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Gombok -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="Upload" Command="{Binding OpenUploadCommand}" Margin="0,0,10,0" Width="80"/>
            <Button Content="Load" Command="{Binding LoadContactsCommand}" Margin="0,0,10,0" Width="80"/>
            <Button x:Name="UpdateButton" Content="Update" Margin="0,0,10,0" Width="80"/>
            <Button x:Name="MarkPublishedButton" Content="Marked as Published" Margin="0,0,10,0" Width="130"/>
            <Button x:Name="MarkHiredButton" Content="Marked as Hired" Width="120"/>
        </StackPanel>

        <!-- Szűrők -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Label Content="Name:" VerticalAlignment="Center"/>
            <TextBox x:Name="NameFilterTextBox" Width="120" Margin="5,0,15,0"/>

            <Label Content="Date:" VerticalAlignment="Center"/>
            <DatePicker x:Name="DateFilterPicker" Width="140" Margin="5,0,15,0"/>

            <Label Content="Phone:" VerticalAlignment="Center"/>
            <TextBox x:Name="PhoneFilterTextBox" Width="120"/>
            
            <Label Content="Email:" VerticalAlignment="Center"/>
            <TextBox x:Name="EmailFilterTextBox" Width="120"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding Contacts}" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Extended" HeadersVisibility="Column">
            <DataGrid.Columns>
                <!--
                <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="60"/>
                -->
                <DataGridTextColumn Header="Name" Binding="{Binding Name, Mode=OneWay}" Width="*" CanUserResize="False"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone, Mode=OneWay}" Width="*" CanUserResize="False"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email, Mode=OneWay}" Width="*" CanUserResize="False"/>
                <DataGridTextColumn Header="Date" Binding="{Binding DateCreated, Mode=OneWay}" Width="*" CanUserResize="False"/>
                <DataGridTextColumn Header="Published" Binding="{Binding Published, Mode=OneWay}" Width="80" CanUserResize="False"/>
                <DataGridTextColumn Header="Hired" Binding="{Binding Hired, Mode=OneWay}" Width="80" CanUserResize="False"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
    
</Window>
