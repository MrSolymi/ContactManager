<Window x:Class="McDContactManager.View.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:local="clr-namespace:McDContactManager"
                      xmlns:vm="clr-namespace:McDContactManager.ViewModel"
                      xmlns:behaviors="clr-namespace:McDContactManager.Model"
                      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                      mc:Ignorable="d"
                      Title="McD Kontakt Kezelő" Height="900" Width="1600">
    
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Gombok -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/> <!-- Másolók -->
            <RowDefinition Height="Auto"/> <!-- Szűrők -->
            <RowDefinition Height="*"/>    <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Gombok -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Command="{Binding LoginCommand}" Content="Beelentkezés" Margin="0,0,10,0" Width="100"/>
            <Button Command="{Binding RefreshCommand}" Content="Frissítés" Margin="0,0,10,0" Width="100"/>
            <Label Content="Feladó:" VerticalAlignment="Center" Margin="80,0,0,0"/>
            <TextBox Text="{Binding SenderEmail, UpdateSourceTrigger=PropertyChanged}" Width="250" Margin="5,0,15,0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Label Content="{Binding StatusText}">
                <Label.Style>
                    <Style TargetType="Label">
                        <Setter Property="Foreground" Value="Tomato"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoggedIn}" Value="True">
                                <Setter Property="Foreground" Value="LimeGreen"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Command="{Binding CopySelectedEmailsCommand}" Content="E-mailek másolása vágólapra" Margin="0,0,10,0" Width="210"/>
        </StackPanel>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Command="{Binding MarkPublishedCommand}" Content="Megjelent" Margin="0,0,10,0" Width="140"/>
            <Button Command="{Binding MarkNotPublishedCommand}" Content="Nem jelent meg" Margin="0,0,10,0" Width="140"/>
            <Button Command="{Binding MarkHiredCommand}" Content="Felvett" Margin="0,0,10,0" Width="140"/>
            <Button Command="{Binding MarkNotHiredCommand}" Content="Visszautasítva" Width="140"/>
        </StackPanel>

        <!-- Szűrők -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Label Content="Név:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged}" Width="120" Margin="5,0,15,0"/>

            <Label Content="Telefonszám:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding PhoneFilter, UpdateSourceTrigger=PropertyChanged}" Width="120" Margin="5,0,15,0"/>
            
            <Label Content="E-mail cím:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding EmailFilter, UpdateSourceTrigger=PropertyChanged}" Width="120" Margin="5,0,15,0"/>
            
            <Label Content="Dátum -tól:" VerticalAlignment="Center"/>
            <DatePicker SelectedDate="{Binding DateFrom}" Width="140" Margin="5,0,15,0"/>
            
            <Label Content="Dátum -ig:" VerticalAlignment="Center"/>
            <DatePicker SelectedDate="{Binding DateTo}" Width="140" Margin="5,0,15,0"/>
            
            <CheckBox Content="Hiányos kontaktok megjelenítése (Megjelent/Felvett)"
                      IsChecked="{Binding OnlyUnreviewed}"
                      VerticalAlignment="Center"
                      Margin="5,0,0,0"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid Grid.Row="5" 
                  ItemsSource="{Binding FilteredContacts}" 
                  behaviors:SelectedItemsBehavior.BindableSelectedItems="{Binding SelectedContacts}" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserResizeColumns="False"
                  CanUserResizeRows="False"
                  CanUserReorderColumns="False"
                  SelectionMode="Extended" 
                  HeadersVisibility="Column" 
                  SelectionUnit="FullRow" 
                  CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Név" 
                                    Binding="{Binding Name, Mode=OneWay}" Width="*" CanUserResize="False"/>
                
                <DataGridTextColumn Header="Telefonszám" 
                                    Binding="{Binding Phone, Mode=OneWay}" Width="*" CanUserResize="False"/>
                
                <DataGridTextColumn Header="E-mail cím" 
                                    Binding="{Binding Email, Mode=OneWay}" Width="*" CanUserResize="False"/>
                                    
                <DataGridTextColumn Header="Jelentkezés ideje" 
                                    Binding="{Binding AssignedDate, Mode=OneWay, StringFormat='yyyy. MM. dd'}" Width="*" CanUserResize="False"/>
                
                <DataGridTextColumn Header="Adatbázisba kerülés ideje" 
                                    Binding="{Binding DateCreated, Mode=OneWay, StringFormat='yyyy. MM. dd'}" Width="*" CanUserResize="False"/>
                
                <DataGridTextColumn Header="Megjelent" 
                                    Binding="{Binding PublishedDisplay, Mode=OneWay}" IsReadOnly="True" Width="80" CanUserResize="False"/>
                
                <DataGridTextColumn Header="Felvett" 
                                    Binding="{Binding HiredDisplay, Mode=OneWay}" IsReadOnly="True" Width="80" CanUserResize="False"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
    
</Window>
