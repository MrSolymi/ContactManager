<Window x:Class="ContactManager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ContactManager.ViewModel"
        xmlns:behaviors="clr-namespace:ContactManager.Model"
        xmlns:common="clr-namespace:ContactManager.Common"
        mc:Ignorable="d"
        Title="Kontakt Kezelő"
        Height="800"
        Width="1400"
        FontFamily="Segoe UI"
        FontSize="13"
        Background="#FFF3F4F6">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <common:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <common:InverseBoolConverter x:Key="InverseBoolConverter"/>

        <!-- Modern, visszafogott toolbar gomb stílus -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="Background" Value="#FF2563EB"/>          <!-- finom kék -->
            <Setter Property="BorderBrush" Value="#FF1D4ED8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="4"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF1D4ED8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF1E3A8A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                <Setter Property="Foreground" Value="#FFE5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid alap stílus: enyhén modernebb, de visszafogott -->
        <Style TargetType="DataGrid">
            <Setter Property="RowBackground" Value="#FFFFFFFF"/>
            <Setter Property="AlternatingRowBackground" Value="#FFF3F4F6"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#FFE5E7EB"/>
            <Setter Property="VerticalGridLinesBrush" Value="#FFE5E7EB"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="ColumnHeaderHeight" Value="30"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FFE5E7EB"/>
                        <Setter Property="Foreground" Value="#FF111827"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderBrush" Value="#FFD1D5DB"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- felső vezérlősáv + szűrők -->
            <RowDefinition Height="*"/>     <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Felső rész: toolbar + akciók + szűrők -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- 0: login/refresh/feladó/státusz -->
                <RowDefinition Height="Auto"/> <!-- 1: akció gombok -->
                <RowDefinition Height="Auto"/> <!-- 2: szűrősáv -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 0. sor: Bejelentkezés, Frissítés, Feladó, státusz, "Frissítés folyamatban..." -->
            <StackPanel Grid.Row="0" Grid.Column="0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,5"
                        VerticalAlignment="Center">
                <Button Command="{Binding LoginCommand}"
                        Content="Bejelentkezés"
                        Width="120"
                        Style="{StaticResource ToolbarButtonStyle}"/>

                <Button Command="{Binding RefreshCommand}"
                        Content="Frissítés"
                        Width="120"
                        IsEnabled="{Binding IsRefreshing, Converter={StaticResource InverseBoolConverter}}"
                        Style="{StaticResource ToolbarButtonStyle}"/>

                <Label Content="Feladó:"
                       VerticalAlignment="Center"
                       Margin="40,0,0,0"/>

                <TextBox Text="{Binding SenderEmail, UpdateSourceTrigger=PropertyChanged}"
                         Width="250"
                         Height="25"
                         Margin="10,0,0,0"
                         VerticalContentAlignment="Center"/>
                
                <TextBlock Text="Frissítés folyamatban..."
                           Foreground="#FFEA580C"
                           FontWeight="Bold"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           Visibility="{Binding IsRefreshing, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>

            <!-- 0. sor jobb oldal: státusz + "Frissítés folyamatban..." -->
            <StackPanel Grid.Row="0" Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="10,0,0,5"
                        VerticalAlignment="Center">
                <Label Content="{Binding StatusText}" Margin="0,0,10,0">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Setter Property="Foreground" Value="#FFDC2626"/> <!-- Tomato helyett kicsit szebb piros -->
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoggedIn}" Value="True">
                                    <Setter Property="Foreground" Value="#FF16A34A"/> <!-- LimeGreen helyett -->
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>
            </StackPanel>

            <!-- 1. sor: Akció gombok -->
            <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Bal oldali akciók -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <Button Command="{Binding CopySelectedEmailsCommand}"
                            Content="E-mailek másolása vágólapra"
                            Width="210"
                            Style="{StaticResource ToolbarButtonStyle}"/>

                    <Button Command="{Binding ToggleForeignCommand}"
                            Content="Külföldi jelölés"
                            Width="140"
                            Style="{StaticResource ToolbarButtonStyle}"/>

                    <Button Command="{Binding DeleteContactsCommand}"
                            Content="Kijelölt törlése"
                            Width="140"
                            Style="{StaticResource ToolbarButtonStyle}"/>
                </StackPanel>

                <!-- Jobb oldali státusz gombok -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Command="{Binding MarkPublishedCommand}"
                            Content="Megjelent"
                            Width="140"
                            Style="{StaticResource ToolbarButtonStyle}"/>

                    <Button Command="{Binding MarkNotPublishedCommand}"
                            Content="Nem jelent meg"
                            Width="140"
                            Style="{StaticResource ToolbarButtonStyle}"/>

                    <Button Command="{Binding MarkHiredCommand}"
                            Content="Felvett"
                            Width="140"
                            Style="{StaticResource ToolbarButtonStyle}"/>

                    <Button Command="{Binding MarkNotHiredCommand}"
                            Content="Visszautasítva"
                            Width="140"
                            Style="{StaticResource ToolbarButtonStyle}"/>
                </StackPanel>
            </Grid>

            <!-- 2. sor: Szűrők egy "kártyában" -->
            <Border Grid.Row="2" Grid.ColumnSpan="2"
                    Margin="0,0,0,5"
                    Padding="10"
                    BorderThickness="1"
                    BorderBrush="#D1D5DB"
                    CornerRadius="6"
                    Background="#FFF9FAFB">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- felső sor: szöveges és dátum szűrők -->
                        <RowDefinition Height="Auto"/> <!-- alsó sor: checkboxok -->
                    </Grid.RowDefinitions>

                    <!-- 1. sor: Név / Telefon / Email / Dátumok -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left">
                        <Label Content="Név:" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged}"
                                 Width="120"
                                 Margin="5,0,15,0"/>

                        <Label Content="Telefonszám:" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding PhoneFilter, UpdateSourceTrigger=PropertyChanged}"
                                 Width="120"
                                 Margin="5,0,15,0"/>

                        <Label Content="E-mail cím:" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding EmailFilter, UpdateSourceTrigger=PropertyChanged}"
                                 Width="120"
                                 Margin="5,0,15,0"/>

                        <Label Content="Dátum -tól:" VerticalAlignment="Center"/>
                        <DatePicker SelectedDate="{Binding DateFrom}"
                                    Width="140"
                                    Margin="5,0,15,0"/>

                        <Label Content="Dátum -ig:" VerticalAlignment="Center"/>
                        <DatePicker SelectedDate="{Binding DateTo}"
                                    Width="140"
                                    Margin="5,0,0,0"/>
                    </StackPanel>

                    <!-- 2. sor: CheckBoxok külön sorban -->
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                Margin="0,8,0,0">
                        <CheckBox Content="Hiányos kontaktok megjelenítése (Megjelent/Felvett)"
                                  IsChecked="{Binding OnlyUnreviewed}"
                                  VerticalAlignment="Center"/>

                        <Border Width="1"
                                Margin="10,0,10,0"
                                Background="#D1D5DB"
                                VerticalAlignment="Stretch"/>

                        <CheckBox Content="Csak külföldiek"
                                  IsChecked="{Binding OnlyForeign}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1"
                  ScrollViewer.VerticalScrollBarVisibility="Visible"
                  ItemsSource="{Binding FilteredContacts}"
                  behaviors:SelectedItemsBehavior.BindableSelectedItems="{Binding SelectedContacts}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserResizeColumns="False"
                  CanUserResizeRows="False"
                  CanUserReorderColumns="False"
                  SelectionMode="Extended"
                  HeadersVisibility="Column"
                  SelectionUnit="FullRow"
                  CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Név"
                                    Binding="{Binding Name, Mode=OneWay}"
                                    Width="*"
                                    CanUserResize="False"/>

                <DataGridTextColumn Header="Telefonszám"
                                    Binding="{Binding Phone, Mode=OneWay}"
                                    Width="*"
                                    CanUserResize="False"/>

                <DataGridTextColumn Header="E-mail cím"
                                    Binding="{Binding Email, Mode=OneWay}"
                                    Width="*"
                                    CanUserResize="False"/>

                <DataGridTextColumn Header="Külföldi"
                                    Binding="{Binding ForeignDisplay, Mode=OneWay}"
                                    IsReadOnly="True"
                                    Width="80"
                                    CanUserResize="False"/>

                <DataGridTextColumn Header="Jelentkezés ideje"
                                    Binding="{Binding AssignedDate, Mode=OneWay, StringFormat='yyyy. MM. dd'}"
                                    Width="*"
                                    CanUserResize="False"/>

                <DataGridTextColumn Header="Adatbázisba kerülés ideje"
                                    Binding="{Binding DateCreated, Mode=OneWay, StringFormat='yyyy. MM. dd'}"
                                    Width="*"
                                    CanUserResize="False"/>

                <DataGridTextColumn Header="Megjelent"
                                    Binding="{Binding PublishedDisplay, Mode=OneWay}"
                                    IsReadOnly="True"
                                    Width="80"
                                    CanUserResize="False"/>

                <DataGridTextColumn Header="Felvett"
                                    Binding="{Binding HiredDisplay, Mode=OneWay}"
                                    IsReadOnly="True"
                                    Width="80"
                                    CanUserResize="False"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
