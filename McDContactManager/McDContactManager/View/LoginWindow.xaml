<Window x:Class="McDContactManager.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:McDContactManager.View"
        xmlns:vm="clr-namespace:McDContactManager.ViewModel"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    
    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>
    
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Email:" FontWeight="Bold" />
        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Height="30" Margin="0,5,0,10" />

        <TextBlock Text="Jelszó:" Grid.Row="2" FontWeight="Bold"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="3" Height="30" Margin="0,5,0,10"
                     PasswordChanged="PasswordBox_PasswordChanged" />

        <StackPanel Grid.Row="4" VerticalAlignment="Top">
            <Button Command="{Binding LoginCommand}" Content="Bejelentkezés" Width="120" Height="35" HorizontalAlignment="Right" />
            <TextBlock Text="Hibás bejelentkezés." Foreground="Red" Visibility="Collapsed" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
