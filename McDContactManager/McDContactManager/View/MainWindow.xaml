<Window x:Class="McDContactManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:McDContactManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    <!--
    <Grid>
        <Button Content="Fájl feltöltése" Width="150" Height="40" Click="OpenUploadWindow_Click" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
    -->
    
        <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Gombok -->
            <RowDefinition Height="Auto"/> <!-- Szűrők -->
            <RowDefinition Height="*"/>    <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Gombok -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button x:Name="UploadButton" Content="Upload" Margin="0,0,10,0" Width="80" Click="OpenUploadWindow_Click"/>
            <Button x:Name="LoadButton" Content="Load" Margin="0,0,10,0" Width="80"/>
            <Button x:Name="UpdateButton" Content="Update" Margin="0,0,10,0" Width="80"/>
            <Button x:Name="MarkPublishedButton" Content="Marked as Published" Margin="0,0,10,0" Width="130"/>
            <Button x:Name="MarkHiredButton" Content="Marked as Hired" Width="120"/>
        </StackPanel>

        <!-- Szűrők -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Label Content="Name:" VerticalAlignment="Center"/>
            <TextBox x:Name="NameFilterTextBox" Width="120" Margin="5,0,15,0"/>

            <Label Content="Date:" VerticalAlignment="Center"/>
            <DatePicker x:Name="DateFilterPicker" Width="140" Margin="5,0,15,0"/>

            <Label Content="Phone:" VerticalAlignment="Center"/>
            <TextBox x:Name="PhoneFilterTextBox" Width="120"/>
            
            <Label Content="Email:" VerticalAlignment="Center"/>
            <TextBox x:Name="EmailFilterTextBox" Width="120"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid Grid.Row="2" x:Name="ContactsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Extended">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="60"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                <DataGridTextColumn Header="Published" Binding="{Binding Date}" Width="80"/>
                <DataGridTextColumn Header="Hired" Binding="{Binding Date}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
    
</Window>
